{
    "name": "@2forweb/simple-build",
    "version": "1.0.1",
    "description": "Simple build system based in ESBuild",
    "scripts": {
        "lint": "./node_modules/.bin/eslint ./src --ext .ts",
        "definitions": "./node_modules/.bin/tsc --project ./src/tsconfig.json",
        "build": "node ./build.js",
        "build:watch": "node ./build.js --watch",
        "publish": "npm run definitions && npm run build && npm publish",
        "test": "jest"
    },
    "keywords": [
        "build",
        "esbuild",
        "system",
        "simple"
    ],
    "homepage": "https://github.com/2forWeb/simple-build#readme",
    "bugs": {
        "url": "https://github.com/2forWeb/simple-build/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/2forWeb/simple-build.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "license": "MIT",
    "author": "Matias Jos√©",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/**/*.d.ts",
    "devDependencies": {
        "@babel/preset-env": "^7.26.9",
        "@eslint/js": "^9.21.0",
        "@jest/globals": "^29.7.0",
        "@types/node": "^22.13.9",
        "babel-jest": "^29.7.0",
        "eslint": "^9.21.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.6",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.0",
        "eslint-config-prettier": "^10.0.2",
        "eslint-plugin-prettier": "^5.2.3",
        "prettier": "^3.5.3"
    },
    "dependencies": {
        "console-log-colors": "^0.5.0",
        "dotenv": "^16.4.7",
        "esbuild": "^0.25.0",
        "esbuild-copy-files-plugin": "^1.2.1",
        "esbuild-plugin-clean": "^1.0.1",
        "esbuild-sass-plugin": "^3.3.1"
    }
}
